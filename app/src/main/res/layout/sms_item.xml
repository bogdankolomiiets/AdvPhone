<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="sms"
            type="com.epam.rd.advphone.models.Sms" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/cardViewStyle">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <FrameLayout
                android:id="@+id/contactImageContainer"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignTop="@id/senderRecipientContainer"
                android:layout_alignBottom="@id/senderRecipientContainer"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="8dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/contactImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/contact_image"
                    app:civ_circle_background_color="@color/backgroundGrey" />

                <TextView
                    android:id="@+id/contactInitials"
                    style="@style/TextAppearance.AppCompat.Large"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    tools:text="Aa" />
            </FrameLayout>

            <LinearLayout
                android:id="@+id/senderRecipientContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@+id/smsTime"
                android:layout_toEndOf="@+id/contactImageContainer"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/smsRecipient"
                    style="@style/smsItemStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@{sms.recipientName != null ? sms.recipientName : sms.recipientNumber}"
                    tools:text="Recipient" />

                <TextView
                    android:id="@+id/smsText"
                    style="@style/smsItemStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{sms.messageText}"
                    tools:text="Message text" />
            </LinearLayout>

            <TextView
                android:id="@+id/smsTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/senderRecipientContainer"
                android:layout_alignBottom="@id/senderRecipientContainer"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="8dp"
                android:gravity="center"
                android:text="@{sms.time}"
                tools:text="Date" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>
